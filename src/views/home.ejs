<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IT Conferences | Home</title>
    <!-- <link rel="stylesheet" href="./assets/font/fontawesome/css/all.min.css" /> -->
    <link rel="stylesheet" href="./css/style.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css"
    />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="app">
      <nav class="navbar navbar-expand-sm bg-body-tertiary">
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link current" href="home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="upcoming">Upcoming Conferences</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="running">Running Conferences</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="over">Over Conferences</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="planning">Conference Planning</a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container">
        <div class="row">
          <div class="action-item">
            <div class="action-header">HOME</div>
          </div>
        </div>
        <div class="row m-3">
          <div class="search container-fluid col-md-6 offset-md-0">
            <form class="d-flex search-item" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
          </div>
          <!-- <div class="btn-item-collect col-md-3 d-flex">
            <button
              type="button"
              class="btn btn-primary ms-auto"
              onclick="openAddItemForm()"
            >
              <i class="fa-solid fa-circle-plus"></i>
              Thêm mặt hàng
            </button>
          </div> -->
        </div>
        <!-- <div class="row m-2 mt-5">
          <a href="" class="all-item item-active col-md-2"> Tất cả mặt hàng </a>
          <a href="" class="all-item col-md-2"> Top mặt hàng </a>
        </div> -->
        <div class="row">
          <table class="table table-hover">
            <thead class="head-table">
              <tr>
                <th scope="col">Rank</th>
                <th scope="col">Conference</th>
                <th scope="col">Title</th>
                <th scope="col">Impact Score</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Venue</th>
              </tr>
            </thead>
          
            <tbody class="body-table design-title">
              <% data.forEach(function(conference) { %>
                <tr>
                  <td><%= conference.Rank %></td>
                  <td>
                    <img src="<%= conference.Conference %>" alt="img" class="table-item-img" />
                  </td>
                  <td>
                    <a target="_blank" href="<%= conference.Link2Conf%>">
                      <%= conference.Title %>
                    </a>
                  </td>
                  <td><%= conference.ImpactScore %></td>
                  <td class="color-green" style="white-space: nowrap; width: 1%;"><%= conference.StartDate %></td>
                  <td class="color-red" style="white-space: nowrap; width: 1%;"><%= conference.EndDate %></td>
                  <td><%= conference.Venue %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          <nav aria-label="...">
            <ul class="pagination">
              <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                <a class="page-link" href="<%= currentPage == 1 ? '#' : '?page=' + (currentPage - 1) %>">Previous</a>
              </li>
              <% let startPage = Math.max(1, currentPage - 2); %>
              <% let endPage = Math.min(totalPages, startPage + 4); %>
              <% if (startPage > 1) { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
              <% } %>
              <% for(let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
              <% if (endPage < totalPages) { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
              <% } %>
              <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="<%= currentPage == totalPages ? '#' : '?page=' + (currentPage + 1) %>">Next</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>

      <div class="footer">
        <div class="footer-text">IT Conferences</div>
      </div>
    </div>
  
  </body>
</html>
